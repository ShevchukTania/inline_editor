<h1> Posts </h1>

<p> <%= link_to 'Add new post', new_post_path %> </p>

<%- if @collection.any? %>
  <table>
    <thead>
      <tr>
        <th class='id'>
          ID
        </th>
        <th>
          Title
        </th>
        <th>
          About
        </th>
        <th class='edit'></th>
      </tr>
    </thead>
    <tbody>
      <%- @collection.each do |post| %>
        <tr>
          <td class='id'>
            <%= post.id %>
          </td>
          <td class='post-title'>
            <%= inline_editor as: :select, text: post.title, value: post.title, collection: Post::TITLE,
              save_url: inline_update_post_path(post, format: :json), include_blank: false, param: 'title'%>
          </td>

          <td class="post-about <%=dom_id(post)%>">
            <%= inline_editor as: :grouped_select, text: post.about, value: post.about, collection: Post::ABOUT_GROUPED,
              save_url: inline_update_post_path(post, format: :js), include_blank: false, param: 'about' do %>
              <%= inline_editor_text(value: post.about, option: 'about') %>
            <% end %>
          </td>
          <td class='edit'>
            <%= link_to 'edit', edit_post_path(post) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
